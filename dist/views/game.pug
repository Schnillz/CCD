extends layout

block content

  div.container
    div.page-header
      h1= page_title
    h3.text-info es sind noch #{matches_left} Streichölzer übrig, #{which_player} ist am Zug
    form(name="continue_game", method="post")
      div.form-group
        label(for="number_of_matches") Wieviele Streichhölzer sollen entfernt werden?
        input(class="form-control", type="text", name="number_matches")
      button(class="btn btn default", type="submit") Weiterspielen
